<div class='ep-form'>
	<%# form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
	<%= form_for @user, :url => { controller: 'users', :action => "add_experience" }, :html => { :method => "put", :class => 'form-horizontal' } do |f| %>
		

			<%= f.fields_for experience do |p| %>
				<div class="control-group">
				  <%= p.label :title, :class => 'control-label' %>	
				  <div class="controls">
				    <%= p.text_field :title, :value => '', :class => 'text_field' %>
			    </div>
		    </div>

		    <div class="control-group">
				  <%= p.label :employer, :class => 'control-label' %>	
				  <div class="controls">
				    <%= p.text_field :employer, :value => '', :class => 'text_field' %>
			    </div>
		    </div>

		    <div class="control-group">
				  <%= p.label :school, :class => 'control-label' %>	
				  <div class="controls">
				  	<%= p.hidden_field :id %>
				    <%= p.text_field :school, :value => '', :class => 'text_field' %>
			    </div>
		    </div>

		    <div class="control-group">
				  <%= p.label :district, :class => 'control-label' %>	
				  <div class="controls">
				  	<%= p.hidden_field :id %>
				    <%= p.text_field :district, :value => '', :class => 'text_field' %>
			    </div>
		    </div>

		     <div class="control-group">
				  <%= p.label :boro, :class => 'control-label' %>	
				  <div class="controls">
				  	<%= p.hidden_field :id %>
				    <%= p.text_field :boro, :value => '', :class => 'text_field' %>
			    </div>
		    </div>

		    <div class="control-group">
				  <%= p.label :description, :class => 'control-label' %>	
				  <div class="controls">
				  	<%= p.hidden_field :id %>
				    <%= p.text_area :description, :value => '', :class => 'text_field', :rows => '6' %>
			    </div>
		    </div>

		  <% end %>

	  <div class="form-actions">
	    <%= f.submit 'Update', :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                users_path, :class => 'btn' %>
	  </div>
	<% end %>
</div>