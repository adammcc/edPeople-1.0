<section class="ep-home-section__one ep-home-section__one--sign-in-pw">
  <div class="container">
    <div class="ep-home-section__row row">
      <div class="ep-signin-signup ep-signin-signup--change-pw ep-signin-signup--signin-pw col-md-4 col-md-offset-4">
        <br>
        <h2 class="ep-signin-signup__header">Change your password</h2>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <div class="ep-signin-signup__errors">
            <%= devise_error_messages! %>
          </div>

          <%= f.hidden_field :reset_password_token %>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.password_field :password, placeholder: 'New password', :autofocus => true, class: 'ep-signin-signup__text-field-large' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.password_field :password_confirmation , placeholder: 'Confirm new password', class: 'ep-signin-signup__text-field-large' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.submit  "Change my password", class: 'btn btn-primary ep-signin-signup__submit' %>
            </div>
          </div>
        <% end %>

        <div class="row">
          <br>
          <div class="ep-links col-md-10 col-md-offset-1">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
