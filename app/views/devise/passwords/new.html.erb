<section class="ep-home-section__one ep-home-section__one--sign-in-pw">
  <div class="container">
    <div class="ep-home-section__row row">
      <div class="ep-signin-signup ep-signin-signup--forgot-pw ep-signin-signup--signin-pw col-md-6 col-md-offset-3">
        <br>
        <h2>Forgot your password?</h2>

        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <div class="ep-signin-signup__errors">
            <%= devise_error_messages! %>
          </div>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.email_field :email, placeholder: 'Email', :autofocus => true, class: 'ep-signin-signup__text-field-large' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.submit  "Send me reset password instructions", class: 'btn btn-primary ep-signin-signup__submit' %>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="ep-links col-md-10 col-md-offset-1">
            <br><br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

