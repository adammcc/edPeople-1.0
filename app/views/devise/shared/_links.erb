<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name) %>
  <span>|</span>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %>
  <span>|</span>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Resend confirmation", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if user_signed_in? %>
	Signed in as <%= current_user.name %>. Not you?
	<%= link_to "Sign out", destroy_user_session_path,:method => :delete %>
<% else %>
  <%= link_to user_omniauth_authorize_path(:linkedin) do %>
  <i class="fa fa-linkedin-square ep-linkedin-icon"></i> Sign in with Linkedin
  <% end %><span>|</span>

  <%- if controller_name != 'sessions' %>
    <%= link_to "Create an organization account", "#", class: 'js-create-an-org' %>
    <%= link_to "Create an individual account", "#", class: 'ep-create-a-user js-create-a-user' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end -%>
<% end %>

