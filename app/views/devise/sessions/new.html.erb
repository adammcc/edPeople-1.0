<section class="ep-home-section__one ep-home-section__one--sign-in-pw">
	<div class="container">
		<div class="ep-home-section__row row">
			<div class="ep-signin-signup ep-signin-signup--signin col-md-4 col-md-offset-4">
				<h2 class="ep-signin-signup__header">Sign in</h2>

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<div class="ep-signin-signup__errors">
				  	<p><%= flash[:alert] %></p>
				  </div>

				  <div class="row">
				  	<div class="col-md-10 col-md-offset-1">
				  		<%= f.email_field :email, placeholder: 'Email', class: 'ep-signin-signup__text-field-large', :required => true %>
				  	</div>
				  </div>

				  <div class="row">
				  	<div class="col-md-10 col-md-offset-1">
				  		<%= f.password_field :password, placeholder: 'Password', class: 'ep-signin-signup__text-field-large', :required => true %>
				  	</div>
					</div>

				  <%# if devise_mapping.rememberable? -%>
				    <!-- <div><%#= f.check_box :remember_me %> <%#= f.label :remember_me %></div> -->
				  <%# end %>

				  <div class="row">
					  <div class="col-md-10 col-md-offset-1">
					  	<%= f.submit "Sign in", class: 'btn btn-primary ep-signin-signup__submit' %>
					  </div>
					</div>
				<% end %>

				<div class="row">
					<div class="ep-links col-md-10 col-md-offset-1">
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
