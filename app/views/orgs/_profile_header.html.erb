<div class="col-sm-12 ep-profile-header white-bg">

	<div class="row">
		<div class="col-sm-6 ep-user-snapshot">
			<div class="ep-profile-image">
				<%= user_image(org_user, 'medium', '120', '120') %>
			 	<% if org_user == current_user %>
					<div class="ep-profile-image__uploader-container">
						<a class="ep-change-image <%= org_user.has_profile_image? ? 'js-edit' : '' %>" data-toggle="collapse" data-target="#ep-profile-image__toggle">
							<i class="fa fa-camera-retro"></i>
							<%= org_user.has_profile_image? ? 'Change image' : 'Add image' %>
						</a>
					</div>
				<% end %>
			</div>

			<div class="ep-user-info ep-user-info--org">
				<h3>
					<%= best_in_place org, :name, :type => :input, activator: '.ep-edit-org-name' %>
					<% if org_user == current_user %>
						<a class="ep-edit-org-name js-edit"> Edit</a>
					<% end %>
				</h3>
				<% if org.org_type.present? || current_user == org_user %>
					<p>
						<%= best_in_place org, :org_type, :type => :input, activator: '.ep-edit-org-type', nil: 'What type of organization are you?' %>
						<% if org_user == current_user %>
							<% if org.org_type.present? %>
								<a class="ep-edit-org-type js-edit"> Edit</a>
							<% else %>
								<a class="ep-edit-org-type js-add-bip"> + Add</a>
							<% end %>
						<% end %>
					</p>
				<% end %>
				<% if org.borough.present? || current_user == org_user %>
					<p>
						<%= best_in_place org, :borough, :type => :input, activator: '.ep-edit-org-borough', nil: 'What\'s your borough or county?' %>
						<% if org_user == current_user %>
							<% if org.borough.present? %>
								<a class="ep-edit-org-borough js-edit"> Edit</a>
							<% else %>
								<a class="ep-edit-org-borough js-add-bip"> + Add</a>
							<% end %>
						<% end %>
					</p>
				<% end %><br>
			</div>
		</div>

		<div class="ep-user-roles-and-subjects col-sm-3">
		</div>

		<div class="ep-profile-actions js-profile-actions-<%= org_user.id %> col-sm-3">
			<%= render partial: 'profile_actions', locals: { org: org, org_user: org_user} %>
		</div>
	</div>
	<%= render partial: 'users/add_avatar_form', locals: { user: org_user } %>
</div>





