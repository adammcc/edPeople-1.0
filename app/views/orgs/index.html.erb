<div class="row-fluid"><br><br><br><br>
  <div class="ep-search col-sm-3 white-bg">
    <h3>Find organizations</h3>
    <%= form_tag orgs_path, method: :get, remote: true, class: 'js-search-form' do %>

      <%= text_field_tag 'search', @search_term, placeholder: 'Search people...', class: "js-search-form__text-field ep-search-form__text-field" %>

      <h4>Filter by location</h4>
      <% @locations.each do |location| %>
        <%= check_box_tag 'filter_by_locations[]', location.name, false, class: 'js-search-form__check-box' %>
        <%= label_tag 'filter_by_location', location.name, class: 'ep-filter-label' %><br>
      <% end %>

    <% end %>
  </div>

  <div class="ep-index col-sm-8 white-bg">
    <div class="page-header">
      <h3>Organizations</h3>
    </div>
    <table class="table ep-index__table">
      <tbody class="ep-index__items">
        <%= render partial: 'orgs/orgs', locals: { users: @orgs } %>
      </tbody>
    </table>
    <div class="js-will-page">
      <%= will_paginate @orgs %>
    </div>
  </div>
</div>
