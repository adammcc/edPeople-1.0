<table class="table ep-index__table">
  <tbody>
    <% conversation.messages.each do |message| %>
      <tr>
        <td>
          <% user = message.user %>
          <div class="ep-index__photo">
            <% if user.avatar.url != "/images/original/missing.png" %>
              <%= image_tag("https://s3.amazonaws.com/ep-dev-avatar/#{user.id}", height: '50', width: '50') %>
            <% else %>
              <%= image_tag(user.image_url, height: '50', width: '50') %>
            <% end %>
          </div>
          <div class="ep-index__meta">
            <p><%= link_to user.name, user_path(user) %></p>
            <p><%= h(message.note).gsub(/\n/, '<br/>').html_safe %></p>
          </div>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class='ep-index__new-message'>
        <div class="ep-index__photo">
          <% if current_user.avatar.url != "/images/original/missing.png" %>
            <%= image_tag("https://s3.amazonaws.com/ep-dev-avatar/#{current_user.id}", height: '50', width: '50') %>
          <% else %>
            <%= image_tag(current_user.image_url, height: '50', width: '50') %>
          <% end %>
        </div>
        <div class="ep-index__meta">
          <p><%= link_to current_user.name, user_path(current_user) %></p>
          <%= form_for Message.new, remote: true do |f| %>
            <%= hidden_field_tag :convo_id, conversation.id  %>
            <%= f.text_area :note, :class => 'ep-form__text-area', rows: '3', cols: '80' %>
            <%= f.submit 'Send', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>