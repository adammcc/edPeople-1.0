<div class="col-md-12 ep-profile-header white-bg">

	<div class="row">
		<div class="col-md-6 ep-user-snapshot">
			<div class="ep-profile-image">
				<%= user_image(@user, 'medium', '120', '120') %>
			 	<% if @user == current_user %>
					<div class="ep-profile-image__uploader-container">
						<a class="ep-change-image <%= @user.has_profile_image? ? 'js-edit' : '' %>" data-toggle="collapse" data-target="#ep-profile-image__toggle">
							<i class="fa fa-camera-retro"></i>
							<%= @user.has_profile_image? ? 'Change image' : 'Add image' %>
						</a>
					</div>
				<% end %>
			</div>

			<div class="ep-user-info">
				<h3>
					<%= best_in_place @user, :name, :type => :input, activator: '.ep-edit-name' %>
					<% if @user == current_user %>
						<a class="ep-edit-name js-edit"> Edit</a>
					<% end %>
				</h3>
				<p>

					<% if @user == current_user %>
						<%= best_in_place @user, :headline, :type => :input, activator: '.ep-edit-headline', nil: 'Add a headline' %>
						<% if @user.headline.present? %>
							<a class="ep-edit-headline js-edit"> Edit</a>
						<% else %>
							<a class="ep-edit-headline js-add-bip"> + Add</a>
						<% end %>
					<% else %>
						<%= @user.headline %>
					<% end %>
				</p>
			</div>
		</div>

		<div class="ep-user-roles-and-subjects col-md-3">
			<% if @user.has_roles? || @user == current_user %>
				<div class="ep-user-roles-and-subjects__roles">
					<%= render partial: 'roles', locals: { user: @user, roles: @roles } %>
				</div>
			<% end %>
			<% if @user.has_subjects? || @user == current_user %>
				<div class="ep-user-roles-and-subjects__subject-areas">
					<%= render partial: 'subjects', locals: { user: @user, subjects: @sbjects } %>
				</div>
			<% end %>
		</div>

		<div class="ep-profile-actions js-profile-actions-<%= @user.id %> col-md-3">
			<%= render partial: 'profile_actions', locals: { user: @user} %>
		</div>
	</div>
	<%= render partial: 'add_avatar_form', locals: { user: @user } %>
</div>





