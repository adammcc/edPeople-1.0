<div class="row">
	<%= render partial: 'profile_header' %>
</div>

<div class="row">
	<div class="span7">
		<div class="ep-profile-section white-bg">
			<%= render partial: 'pro_summary', locals: { user: @user } %>
		</div>

		<div class="ep-profile-section white-bg">
			<%= render partial: 'experience', locals: { colleges: @experiences } %>
		</div>

		<div class="ep-profile-section white-bg">
			<%= render partial: 'education', locals: { colleges: @colleges } %>
		</div>
	</div>

	<div class="span5">
		<div class="ep-profile-section white-bg">
			<%= render partial: 'skills' %>
		</div>

		<div class="ep-profile-section white-bg">
			<%= render partial: 'connections' %>
		</div>
	</div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
