<div class="ep-profile-section__header">
	<h4>Skills</h4>
</div>
<div class="ep-skills ep-profile-section__body">
	<% for skill in @user.skills %>
		<div class="ep-skill">
			<%= skill.name %>
				<% if @user == current_user %>
					<%= link_to skill_path(skill), method: :delete do %>
					<i class="fa fa-times"></i>
				<% end %>
			<% end %>
		</div>
	<% end %>
	<br>
	<% if @user == current_user %>
		<br>
		<a class="" data-toggle="collapse" data-target="#ep-add-skill"><i class="fa fa-plus"></i> Add</a>
		<div id="ep-add-skill" class="collapse">
			<%= form_for Skill.new do |f| %>
				<div class="ep-form__profile-form-field">
					<%= f.label :name, :class => 'ep-form__label' %>
				 	<%= f.text_field :name, :class => 'ep-form__text-field' %>
				</div>
		    <%= f.submit 'Add', :class => 'btn btn-primary' %>
		    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		                user_path(current_user), :class => 'btn btn-default' %>
		 	<% end %>
		</div>
	<% end %>
</div>